<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PrincipalController">
   <children>
      <VBox alignment="CENTER" prefHeight="250.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" prefWidth="300.0">
               <children>
                  <Label text="Melhor Combustível">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblMelhorCombustivel" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" textFill="GREEN">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <GridPane prefWidth="300.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="ÁLCOOL - R$" GridPane.rowIndex="2" />
                  <TextField fx:id="txtFldAlcoolValor" prefHeight="25.0" prefWidth="98.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="ÁLCOOL - Km/L" GridPane.rowIndex="3" />
                  <TextField fx:id="txtFldAlcoolKmL" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="GASOLINA  - R$" />
                  <TextField fx:id="txtFldGasolinaValor" prefWidth="100.0" GridPane.columnIndex="1" />
                  <Label text="GASOLINA - Km/L" GridPane.rowIndex="1" />
                  <TextField fx:id="txtFldGasolinaKmL" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <HBox alignment="CENTER" prefWidth="400.0">
               <children>
                  <HBox alignment="TOP_RIGHT" prefWidth="400.0">
                     <children>
                        <Button fx:id="btnLimpar" disable="true" mnemonicParsing="false" onAction="#btnLimparCamposClick" text="Limpar">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnCalcular" disable="true" mnemonicParsing="false" onAction="#bntCalcularClick" text="Calcular">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin></Button>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#btnFecharClick" text="Fechar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
